@model IEnumerable<LT_WEBTUAN10_.Models.SACH>

<div class="product-group">
    <div class="row">

        @foreach (var sACH in Model)
        {
            <div class="m-5 col-lg-3 card mr-2 mt-2 text-center">
                <div class=" card-product">
                    <img style="width:300px;height:350px;" class="card-img-top mt-2" src="@Url.Content("~/Content/HinhAnhSP/" + sACH.ANHBIA)" />
                    <div class="card-body">
                        <h5 style="font-size:30px" class="card-title">@sACH.TENSACH</h5>
                        @Html.ActionLink("Chi Tiết", "ChiTiet", "Home", new { MaSach = sACH.MASACH }, new { @class = "btn btn-warnings" })

                        @Html.ActionLink("Chon", "Details", "BaiTH8_", new { MaSach = sACH.MASACH }, new { @class = "btn btn-warnings" })
                    </div>
                </div>
            </div>

        }
    </div>
</div>
